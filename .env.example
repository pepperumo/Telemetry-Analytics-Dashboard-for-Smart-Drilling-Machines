# Telemetry Analytics Dashboard Configuration

# Application Settings
APP_NAME="Telemetry Analytics Dashboard"
APP_VERSION="1.0.0"
DEBUG=false

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Data Directory Paths
DATA_DIR=./public/data
CSV_FILE_PATH=./public/data/raw_drilling_sessions.csv

# ML System Configuration
ML_ENABLED=true
ML_DEBUG=false
ML_DATA_DIR=./data/ml
ML_MODEL_DIR=./data/ml/models
ML_METADATA_DIR=./data/ml/metadata
ML_PERFORMANCE_DIR=./data/ml/performance
ML_BACKUP_DIR=./data/ml/backups
ML_FEATURES_DIR=./data/ml/features

# ML Feature Flags
ML_HEALTH_SCORING_ENABLED=true
ML_PREDICTIVE_ALERTS_ENABLED=true
ML_MODEL_MANAGEMENT_ENABLED=true
ML_AUTO_RETRAINING_ENABLED=true
ML_PERFORMANCE_MONITORING_ENABLED=true

# ML Performance Thresholds
ML_MIN_ACCURACY_THRESHOLD=0.75
ML_DRIFT_DETECTION_THRESHOLD=0.1
ML_AUTO_RETRAIN_THRESHOLD=0.85
ML_PERFORMANCE_CHECK_INTERVAL=3600  # seconds

# ML Model Configuration
ML_DEFAULT_MODEL_VERSION=1.0.0
ML_MAX_MODEL_VERSIONS=10
ML_BACKUP_RETENTION_DAYS=30
ML_FEATURE_CACHE_TTL=1800  # seconds

# TensorFlow Lite Configuration (Optional)
TFLITE_ENABLED=false
TFLITE_NUM_THREADS=4
TFLITE_USE_GPU=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
ML_LOG_LEVEL=INFO
ML_LOG_FILE=./logs/ml.log

# Development Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
RELOAD_ON_CHANGE=false

# Production Settings (Override in production)
# DEBUG=false
# API_RELOAD=false
# ML_DEBUG=false
# LOG_LEVEL=WARNING